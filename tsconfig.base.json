{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2020", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@frontend/home-page/application": [
        "libs/frontend/home-page/application/src/index.ts"
      ],
      "@frontend/home-page/feature": [
        "libs/frontend/home-page/feature/src/index.ts"
      ],
      "@frontend/home-page/feature-text-slides": [
        "libs/frontend/home-page/feature-text-slides/src/index.ts"
      ],
      "@frontend/home-page/infrastructure": [
        "libs/frontend/home-page/infrastructure/src/index.ts"
      ],
      "@frontend/home-page/ui-tasks-links": [
        "libs/frontend/home-page/ui-tasks-links/src/index.ts"
      ],
      "@frontend/shared/feature-header": [
        "libs/frontend/shared/feature-header/src/index.ts"
      ],
      "@frontend/shared/styles": ["libs/frontend/shared/styles/src/index.ts"],
      "@frontend/shell": ["libs/frontend/shell/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
